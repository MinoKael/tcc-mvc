@model MeuTccMvc.Models.Movie
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Novo Filme";
}

<h2>Novo Filme</h2>

<form asp-action="CreateMovie" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sinopse"></label>
        <input asp-for="Sinopse" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseYear"></label>
        <input asp-for="ReleaseYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DurationMinutes"></label>
        <input asp-for="DurationMinutes" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-primary mt-1">Salvar</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}